{
  "name": "react2html",
  "version": "0.0.2",
  "description": "react2html - component based web site development starter kit",
  "private": false,
  "homepage": "https://github.com/modesty/react2html",
  "license": "MIT",
  "bugs": "npm install --unsafe-perm",
  "repository": {
    "type": "git",
    "url": "https://github.com/modesty/react2html"
  },
  "author": {
    "name": "Modesty Zhang",
    "email": "modestyz@hotmail.com",
    "url": "https://github.com/modesty"
  },
  "keywords": [
    "HTML5",
    "CSS3",
    "Javascript, ES6, ES2015",
    "Multi-Page App",
    "React",
    "Componenet based web development",
    "SOHA",
    "Static React Site"
  ],
  "engines": {
    "node": ">=4.4.7"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.11.6",
    "colors": "^1.1.2",
    "css-loader": "^0.23.1",
    "eslint": "^3.1.1",
    "eslint-loader": "^1.4.1",
    "eslint-plugin-react": "^6.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "fs-extra": "^0.30.0",
    "glob": "^7.0.5",
    "isomorphic-fetch": "^2.2.1",
    "live-server": "^1.0.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.14.1",
    "node-sass": "^3.8.0",
    "npm-run-all": "^2.3.0",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "rimraf": "2.5.4",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "watch": "^0.19.1",
    "webpack": "^1.13.1"
  },
  "dependencies": {},
  "scripts": {
    "remove-target": "./node_modules/.bin/rimraf ./target",
    "clean-target": "npm run remove-target && mkdir target",
    "build:asset": "babel-node ./tool/build.asset.js",
    "build:page": "babel-node ./tool/build.page.js",
    "build:bundle": "babel-node ./tool/build.bundle.js",
    "watcher": "babel-node ./tool/build.watcher.js",
    "build:watch": "npm run clean-target; npm-run-all --parallel build:asset build:page watcher",
    "build": "npm run clean-target; npm-run-all --parallel build:asset build:page build:bundle",
    "start": "npm run build:watch"
  },
  "config": {
    "unsafe-perm": true
  }
}
